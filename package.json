{
  "name": "react-project-baseline",
  "version": "0.0.2",
  "description": "React Project",
  "main": "",
  "scripts": {
    "build": "broccoli build dist",
    "clean": "rimraf dist coverage tmp",
    "lint": "eslint src/ __tests__/",
    "packages": "npm list --depth=0",
    "serve": "broccoli serve",
    "test": "jest --no-cache",
    "watch": "jest --no-cache --watch"
  },
  "author": "Greg Hewett <greg@greghewett.com>",
  "license": "MIT",
  "repository": "git@github.com:glhewett/react_project_baseline.git",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-jest": "^17.0.2",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "broccoli": "^0.16.9",
    "broccoli-cli": "^1.0.0",
    "broccoli-env": "0.0.1",
    "broccoli-funnel": "^1.0.9",
    "broccoli-less-single": "^0.6.3",
    "broccoli-merge-trees": "^1.1.5",
    "broccoli-source-map": "^0.2.4",
    "broccoli-watchify": "^1.0.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.12.0",
    "eslint-plugin-react": "^5.2.2",
    "jest-cli": "^13.2.3",
    "jest-junit": "1.0.2",
    "react-addons-test-utils": "^15.4.1",
    "rimraf": "^2.5.4",
    "s3-deploy": "^0.7.3"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0",
    "yarn": "^0.17.10"
  },
  "babel": {
    "presets": ["es2015", "react"],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": ["react"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "jasmine": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleFileExtensions": ["js", "jsx"],
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "redux",
      "react-redux",
      "fbjs",
      "enzyme",
      "cheerio",
      "htmlparser2",
      "lodash",
      "domhandler",
      "object.assign",
      "define-properties",
      "function-bind",
      "object-keys",
      "object.values",
      "es-abstract"
    ]
  }
}
